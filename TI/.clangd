# .clangd configuration for TI SDK
# This file enables LSP (Language Server Protocol) functionality for the TI folder
# Provides IntelliSense, code completion, and navigation for TI drivers and device files

CompileFlags:
  # Add compiler flags
  Add:
    # TI ARM Compiler compatibility
    - -target
    - arm-none-eabi
    - -mcpu=cortex-m0plus
    - -mthumb
    - -mfloat-abi=soft

    # Language standards
    - -std=c11
    - -xc

    # Enable useful warnings
    - -Wall
    - -Wextra

    # Preprocessor definitions for CC2340R53
    - -DDeviceFamily_CC23X0R5
    - -D__CC2340R53__
    - -D__ARM_ARCH_6M__

    # TI SDK include paths (relative to TI folder)
    - -Iti
    - -Iti/devices/cc23x0r5
    - -Iti/devices/cc23x0r5/inc
    - -Iti/devices/cc23x0r5/driverlib
    - -Iti/drivers
    - -Iti/drivers/uart2
    - -Iti/drivers/dpl
    - -Iti/drivers/power
    - -Iti/drivers/timer
    - -Iti/drivers/dma
    - -Iti/posix/ticlang

  # Remove flags that might cause issues
  Remove:
    - -mabi=*
    - -fshort-enums
    - -ffunction-sections
    - -fdata-sections

# Index configuration
Index:
  # Enable background indexing
  Background: Build

  # Standard library to use
  StandardLibrary: Yes

# Diagnostics configuration
Diagnostics:
  # Don't show warnings for system headers
  UnusedIncludes: None

  # Suppress specific warnings
  Suppress:
    - "-Wunused-parameter"
    - "-Wunused-variable"
    - "-Wmissing-field-initializers"

  # Clang-tidy checks (disabled for TI SDK)
  ClangTidy:
    Add: []
    Remove: ['*']

# Hover configuration
Hover:
  ShowAKA: Yes

# Completion configuration
Completion:
  AllScopes: Yes
